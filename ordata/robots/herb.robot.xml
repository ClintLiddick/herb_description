<Robot name="herb">
    <KinBody file="herb.kinbody.xml"/>

    <Manipulator name="left_wam">
        <Base>/left/wam_base</Base>
        <Effector>/left/wam7</Effector>
        <GripperJoints>/left/j01 /left/j11 /left/j21</GripperJoints>
        <ClosingDirection>1 1 1</ClosingDirection>
        <Direction>0 0 1</Direction>
    </Manipulator>

